@model List<ProductListResponseModel>
@{
    ViewData["Title"] = "List";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <a asp-action="Create" asp-controller="Product" class="btn btn-outline-success btn-sm">Ürün Ekle</a>
        <table class="table table-stripped table-bordered pt-4">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">Category Name</th>
                    <th scope="col">Supplier Name</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count > 0)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th>@item.Id</th>
                            <th>@item.Name</th>
                            <th>@item.Price</th>
                            <th>@item.Category.Definition</th>
                            <th>@item.Supplier.CompanyName</th>
                            <th>
                                <a asp-action="Update" asp-controller="Product" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Update</a>
                            </th>
                            <th>
                                <a asp-action="Remove" asp-controller="Product" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                            </th>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <th colspan="2">There is no any data..!</th>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
